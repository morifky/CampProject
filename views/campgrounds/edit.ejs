<% include ../partials/header %>
<div class="container">
        <h2 style="text-align:center;">Edit <%=campground.name%></h2>
        <div style="width:40%; margin: 0 auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="txt_name">Name</label>
                    <input type="text" id="txt_name" name="body[name]" value="<%=campground.name%>" class="form-control">
                </div>
                <div class="form-group">
                    <label for="txt_image">Image</label>
                    <input type="text" id="txt_image" name="body[image]" value="<%=campground.image%>" class="form-control">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="body[description]" id="description" cols="40" rows="5" class="form-control"><%=campground.description%></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>
        </div>   
</div>

<% include ../partials/footer %>